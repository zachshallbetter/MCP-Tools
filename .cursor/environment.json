  "start": "sudo service docker start",
  "terminals": [
    {
      "name": "MCP Server",
      "command": "npm run start"
    },
    {
      "name": "Docker Services",
      "command": "docker-compose up"
    },
    {
      "name": "Build",
      "command": "npm run build"
    },
    {
